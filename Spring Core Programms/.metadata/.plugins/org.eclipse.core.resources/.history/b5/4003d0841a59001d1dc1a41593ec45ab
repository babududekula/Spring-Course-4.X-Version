package com.pack.editors;

import java.beans.PropertyEditorSupport;

import com.pack.beans.EmployeeAdress;

public class EmployeeAdressEditor extends PropertyEditorSupport 
{
	@Override
	public void setAsText(String text) throws IllegalArgumentException 
	{
		String [] str = text.split("-");
		EmployeeAdress eaddr = new EmployeeAdress();
		eaddr.setHno(str[0]);
		eaddr.setStreet(str[1]);
		eaddr.setCity(str[2]);
		eaddr.setState(str[3]);
		eaddr.setCountry(str[4]);

		super.setValue(eaddr);
	}
}
